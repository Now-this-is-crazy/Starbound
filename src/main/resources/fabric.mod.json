		"main": [
			"powercyphe.starbound.common.Starbound"
		],
		"client": [
			"powercyphe.starbound.client.StarboundClient"
		],
		"fabric-datagen": [
			"powercyphe.starbound.common.datagen.StarboundDataGenerator"
		],
		"cardinal-components": [
          "powercyphe.starbound.common.registry.SBComponents"
		]
	},
	"mixins": [
		"starbound.mixins.json"
	],
	"depends": {
		"fabricloader": "*",
		"minecraft": ">=1.21.5",
		"java": ">=21",
		"fabric-api": "*"
	},
	"custom": {
		"cardinal-components": [
			"starbound:starry_objects",
			"starbound:starry_invisibility"
		],
		"modmenu": {
			"links": {
				"modmenu.discord": "https://discord.gg/Dmp2dbyNrs"
