{
	"schemaVersion": 1,
	"id": "starbound",
	"version": "${version}",
	"name": "Starbound",
	"description": "A mod focused on adding new starry items and blocks.",
	"authors": [
		"Powercyphe",
		"ShivAngel"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/starbound-mod",
		"sources": "https://github.com/Now-this-is-crazy/Starbound"
	},
	"license": "MIT",
	"icon": "assets/starbound/icon.png",
	"environment": "*",
	"accessWidener": "starbound.accesswidener",
